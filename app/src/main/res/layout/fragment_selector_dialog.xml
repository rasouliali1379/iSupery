<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corners_edittext_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/selector_dialog_clear_btn"
                    android:src="@drawable/ic_cross"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:visibility="invisible"
                    android:layout_alignParentEnd="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <EditText
                    android:id="@+id/selector_dialog_search_et"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:inputType="textNoSuggestions"
                    android:imeOptions="actionSearch"
                    android:hint="@string/earch_shop_hint"
                    android:textSize="14sp"
                    android:background="@null"
                    android:maxLines="1"
                    android:textColor="@color/textColorSecondaryLight"
                    android:textColorHint="@color/textColorPrimaryDark"
                    android:padding="10dp"
                    android:layout_toStartOf="@id/selector_dialog_clear_btn"/>
            </RelativeLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/selector_dialog_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/selector_dialog_nothing_found_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:text="@string/nothing_found"/>
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>