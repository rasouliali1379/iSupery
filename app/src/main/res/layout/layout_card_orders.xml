<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="10dp"
    card_view:cardElevation="1dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_id"
                android:textSize="12sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_id"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/no_of_products"
                        android:textSize="14sp"
                        android:textColor="@color/textColorSecondary" />

                    <TextView
                        android:id="@+id/order_products_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/no_of_products"
                        android:textSize="14sp"
                        android:textColor="@color/textColorSecondary"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp" >

                    <TextView
                        android:id="@+id/abc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/checkout_price"
                        android:textSize="14sp"
                        android:textColor="@color/textColorSecondary" />

                    <TextView
                        android:id="@+id/order_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="$00.0"
                        android:textSize="14sp"
                        android:textColor="@color/textColorSecondary"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/order_status"
                        android:textSize="14sp"
                        android:textColor="@color/textColorSecondary" />

                    <TextView
                        android:id="@+id/order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/order_status"
                        android:textSize="14sp"
                        android:textColor="@color/textColorSecondary"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="3dp"
            android:gravity="center_vertical"
            android:background="@color/windowBackgroundLight">
            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card_orders_time_txt"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@drawable/ic_time"
                    android:text="09:12"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/card_orders_date_txt"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@drawable/ic_calendar"
                    android:text="09:12"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:id="@+id/order_view_btn"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/view"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_corners_primary_color_bg" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
