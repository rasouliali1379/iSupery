<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/windowBackground">
    <LinearLayout
        android:id="@+id/searchBar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corners_edittext_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/search_btn"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_search_menu"
                android:layout_marginStart="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:foreground="?android:attr/selectableItemBackground"
                tools:targetApi="m"
                app:tint="@color/textColorPrimaryDark" />
            <EditText
                android:id="@+id/search_editText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textNoSuggestions"
                android:imeOptions="actionSearch"
                android:hint="@string/search_product_by_name"
                android:textSize="14sp"
                android:background="@null"
                android:maxLines="1"
                android:textColor="@color/textColorSecondaryLight"
                android:textColorHint="@color/textColorPrimaryDark"
                android:padding="10dp"
                android:layout_toStartOf="@id/search_fragment_clear_btn"
                android:layout_toEndOf="@id/search_btn"
                />
            <ImageView
                android:id="@+id/search_fragment_clear_btn"
                android:src="@drawable/ic_cross"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/search_fragment_progress_bar"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:SpinKit_Color="@color/colorPrimary"/>
    <TextView
        android:id="@+id/search_fragment_nothing_found_txt"
        android:text="@string/nothing_found"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>